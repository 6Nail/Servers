<Window x:Class="FileClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileClient"
        mc:Ignorable="d"
        Title="File System" Height="450" Width="297.436">
    <Grid>
        <ListBox Name="fileList" HorizontalAlignment="Left" Height="245" Margin="10,85,0,0" VerticalAlignment="Top" Width="269" MouseLeftButtonUp="IsNullItem"/>
        <Button Name="addBtn" Content="Добавить" HorizontalAlignment="Left" Margin="10,335,0,0" VerticalAlignment="Top" Width="130" FontWeight="Bold" Click="AddFile"/>
        <Button Name="deleteBtn" Content="Удалить" HorizontalAlignment="Left" Margin="149,335,0,0" VerticalAlignment="Top" Width="130" FontWeight="Bold" Click="DeleteFile"/>
        <Label Content="Ваши файлы" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="182" FontWeight="Bold" FontSize="25"/>

    </Grid>
</Window>
